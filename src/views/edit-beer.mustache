
			{{>header}}
			<style>
				.form-group {
					margin-bottom: 1rem;
				}
				.form-group .form-control {
					width:100%;
					font-size: 1rem;
					padding:0.5rem;
					border-radius: 0.5rem;
					height: 2.5rem;
					max-width:100%;
				}
				.form-group input.form-control[type=color] {
					padding:0;
				}
				.card-header{
					padding:1.5rem;
				}
				.card {
					min-width: 500px;
				}
				.form-label {
					font-weight:600;
				}
			</style>
			<h1 class="text-light">Beers</h1>
			<div class="row">
			{{#beers}}
			<div class="col">
				<div class="card">
					<div class="card-header">
						<h1>{{batch}} - {{name}}{{#on_tap}} - Tap #{{tap}}{{/on_tap}}</h1>
					</div>
					<div class="card-body">
						<form method="POST" action="edit/{{batch}}">
							<input type="hidden" value="{{batch}}" name="batch">
							<div class="form-group">
								<label class="form-label" for="name">Name</label>
								<input type="text" class="form-control" id="name" name="name" value="{{name}}">
							</div>
							<div class="form-group">
								<label class="form-label" for="style">Style</label>
								<input type="text" class="form-control" id="style" name="style" value="{{style}}">
							</div>
							<div class="form-group">
								<label class="form-label" for="abv">ABV</label>
								<input type="number" step="any" class="form-control" id="abv" name="abv" value="{{abv}}">
							</div>
							<div class="form-group">
								<label class="form-label" for="ibu">IBU</label>
								<input type="number" class="form-control" id="ibu" name="ibu" value="{{ibu}}">
							</div>
							<div class="form-group">
								<label class="form-label" for="tap">Tap #</label>
								<input type="number" class="form-control" id="tap" name="tap" value="{{tap}}">
							</div>
							<div class="form-group">
								<label class="form-label" for="colour">Colour</label>
								<input type="color" class="form-control" id="colour" name="colour" value="{{colour}}">
							</div>
							<div class="form-group">
								<label class="form-label" for="description">Description</label>
								<textarea class="form-control" id="description" name="description">{{description}}</textarea>
							</div>
							<div class="form-group">
									<label class="form-label" for="icon">Icon</label>
									<select class="form-control" id="icon" name="icon">
										{{#iconOptions}}
										<option value="{{value}}" {{#selected}}selected{{/selected}}>
											{{label}}
										</option>
										{{/iconOptions}}
									</select>
								</div>
							<div class="form-group">
								<button class="btn btn-primary">save</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			{{/beers}}
	{{>footer}}